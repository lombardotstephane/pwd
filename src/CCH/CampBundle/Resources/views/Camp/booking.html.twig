{% extends "CCHCampBundle::layout.html.twig" %}

{% block title %}
    Réservation - {{ parent() }}
{% endblock %}

{% block cchcamp_body %}
    <!--Banner-->
    <section class="sub-banner">
        <!--Background-->
        <div class="bg-parallax bg-1"></div>
        <!--End Background-->
        <!-- Logo -->
        <div class="logo-banner text-center">
            <a href="{{ path("cch_camp_homepage") }}" title="">
                <img src="{{ asset("images/logo-banner.png") }}" alt="">
            </a>
        </div>
        <!-- Logo -->
    </section>
    <!--End Banner-->
    <!-- Main -->
    <div class="main main-dt">
        <div class="container">
            <div class="main-cn detail-page bg-white clearfix">

                <!-- Breakcrumb -->
                <section class="breakcrumb-sc">
                    <ul class="breadcrumb arrow">
                        <li><a href="{{ path("cch_camp_homepage") }}"><i class="fa fa-home"></i></a></li>
                        <li><a href="#" title="">{{ camp.country }}</a></li>
                        <li><a href="#" title="">{{ camp.district }}</a></li>
                        <li><a href="#" title="">{{ camp.city }}</a></li>
                        <li>{{ camp.name }}</li>
                    </ul>
                </section>
                <!-- End Breakcrumb -->
                <section class="head-detail">
                    <div class="head-dt-cn">
                        <div class="row">
                            <div class="col-sm-7">
                                <h1>Réservation {{ camp.name }}</h1>
                            </div>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="col-lg-12">
                        {{ form(form) }}
                    </div>
                </section>

                <!-- End contact-->
            </div>
        </div>
    </div>
    <!-- End Main -->
{% endblock %}