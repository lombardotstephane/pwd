{% extends "CCHCampBundle::layout.html.twig" %}

{% block title %}
    Avis - {{ parent() }}
{% endblock %}

{% block cchcamp_body %}
    <!--Banner-->
    <section class="sub-banner">
        <!--Background-->
        <div class="bg-parallax bg-1"></div>
        <!--End Background-->
        <!-- Logo -->
        <div class="logo-banner text-center">
            <a href="{{ path("cch_camp_homepage") }}" title="">
                <img src="{{ asset("images/logo-banner.png") }}" alt="">
            </a>
        </div>
        <!-- Logo -->
    </section>
    <!--End Banner-->

    <!-- Main -->
    <div class="main">
        <div class="container">
            <div class="main-cn element-page bg-white clearfix">
                <!--Breakcrumb-->
                <section class="breakcrumb-sc">
                    <ul class="breadcrumb arrow">
                        <li><a href="{{ path("cch_camp_homepage") }}"><i class="fa fa-home"></i></a></li>
                        <li><a href="#" title="">Pays</a></li>
                        <li><a href="#" title="">Region</a></li>
                        <li><a href="#" title="">Ville</a></li>
                        <li><a href="{{ path('cch_camp_detail',{'id':app.request.get('id')}) }}" title="">{{ camp.name }}</a></li>
                        <li>Avis</li>
                    </ul>
                </section>
                <!--End Breakcrumb-->

                <section class="user-profile">
                    <div class="row">                      
                        <div class="col-md-12">
                            <div class="my-reviews">

                                <h2 class="user-profile__title">Modifier mon avis</h2><br>
                                <div class="row">
                                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                        {{ form(form) }}

                                    {% endif %}

                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <!-- End Main -->
{% endblock %}
